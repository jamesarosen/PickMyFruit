{
  "name": "fx-pnpm-monorepo-starter",
  "private": true,
  "type": "module",
  "description": "pnpm workspace (monorepo) starter for TypeScript with example React/Tailwind/Vite app and shared package. Includes vitest + eslint + prettier.",
  "license": "UNLICENSED",
  "keywords": [
    "starter",
    "boilerplate",
    "typescript",
    "pnpm",
    "vite",
    "react",
    "eslint",
    "prettier"
  ],
  "author": {
    "name": "Kevin Firko",
    "url": "https://firxworx.com",
    "email": "hello@firxworx.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appcurve/flint.git"
  },
  "scripts": {
    "dev": "NODE_ENV=development pnpm --filter demo dev",
    "dev:watch": "tsc -w",
    "dev:preflight": "pnpm run format && pnpm lint:fix && pnpm run ci:check && pnpm ci:test",
    "ci:lint": "pnpm lint",
    "ci:check": "pnpm --recursive run check",
    "ci:test": "CI=true NODE_ENV=test pnpm --recursive run test",
    "ci:build": "NODE_ENV=production pnpm --recursive --stream run build",
    "setup": "pnpm run reset && pnpm install",
    "reset": "pnpm dlx rimraf --glob ./**/node_modules",
    "build": "NODE_ENV=production pnpm run --recursive --stream build",
    "test": "pnpm --recursive --stream run test",
    "lint": "eslint --config eslint.config.js --max-warnings 0",
    "lint:fix": "eslint --config eslint.config.js . --fix",
    "format": "prettier --config prettier.config.js --write . && pnpm run lint:fix",
    "prettier:check": "prettier --config prettier.config.js --check .",
    "prettier:fix": "prettier --config prettier.config.js --write .",
    "local:publish": "pnpm publish -r --access public",
    "deps:update": "pnpm update -r -i",
    "deps:update:latest": "pnpm update -r -i --latest",
    "deps:dedupe:check": "pnpm dedupe --check",
    "deps:dedupe": "pnpm dedupe",
    "deps:syncpack:check": "pnpm syncpack list-mismatches",
    "deps:syncpack:fix": "pnpm syncpack fix-mismatches",
    "workspace:pwd": "pnpm -w pwd",
    "workspace:ls": "pnpm m ls --json --depth=-1 | node -e \"const path = require('path'); console.log(JSON.parse(require('fs').readFileSync('/dev/stdin', 'utf-8')).map((m) => path.relative(__dirname, m.path)).filter(Boolean))\"",
    "kill:port": "bash -c 'pids=$(lsof -i :$0 | grep LISTEN | awk \"{print \\$2}\"); if [[ -z $pids ]]; then echo \"No process found running on port $0\"; else echo \"Killing: $pids\"; echo $pids | xargs kill; fi'",
    "kill:vscode-server": "ps uxa | grep .vscode-server | awk '{print $2}' | xargs kill",
    "kill:vscode-server:force": "ps uxa | grep .vscode-server | awk '{print $2}' | xargs kill -9",
    "clear:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clear:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "pnpm:env:node:lts": "pnpm env use --global lts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.0.3",
    "@eslint/js": "^9.4.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "^8.56.10",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^20.14.2",
    "esbuild": "^0.21.4",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.4.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "syncpack": "^12.3.2",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.0.4"
  }
}
