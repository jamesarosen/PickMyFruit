{
	"name": "@pickmyfruit/www",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"description": "www.pickmyfruit.com Application",
	"scripts": {
		"build": "vite build",
		"dev": "PORT=${PORT:-5173} vite dev",
		"start": "node .output/server/index.mjs",
		"format": "pnpm run format:write",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint:fix": "oxlint --fix",
		"lint": "oxlint",
		"lint:ci": "oxlint --format github",
		"preview": "vite preview",
		"test": "pnpm run test:watch",
		"test:run": "vitest run",
		"test:ci": "vitest run --reporter=default --reporter=github-actions",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"typecheck": "tsc --noEmit",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:seed": "tsx src/data/seed.ts",
		"deploy": "fly deploy",
		"deploy:setup": "fly launch --no-deploy",
		"logs": "fly logs",
		"ssh": "fly ssh console"
	},
	"dependencies": {
		"@libsql/client": "^0.17.0",
		"@sentry/solidstart": "^10.38.0",
		"@tanstack/solid-router": "^1.160.0",
		"@tanstack/solid-start": "^1.160.0",
		"better-auth": "^1.4.18",
		"drizzle-orm": "^0.45.1",
		"h3-js": "^4.4.0",
		"resend": "^6.9.2",
		"solid-js": "^1.9.11",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.3.0",
		"@playwright/test": "^1.58.2",
		"@solidjs/testing-library": "^0.8.10",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.2.3",
		"drizzle-kit": "^0.31.9",
		"jsdom": "^27.4.0",
		"nitro": "3.0.1-alpha.2",
		"oxlint": "^1.47.0",
		"prettier": "^3.8.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-solid": "^2.11.10",
		"vite-tsconfig-paths": "^6.1.1",
		"vitest": "^4.0.18"
	}
}
