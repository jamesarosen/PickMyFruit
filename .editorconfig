# Editor configuration (http://editorconfig.org)

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2

[*.{md,mdx}]
max_line_length = off
trim_trailing_whitespace = false

# python must be indented with 4 spaces
[*.py]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 4
