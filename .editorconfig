# Editor configuration (http://editorconfig.org)

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{astro,js,jsx,ts,tsx,cjs,mjs,json,yml,yaml,xml,html,css,sass,scss,less,sh}]
indent_style = space
indent_size = 2

[*.{md,mdx}]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

# python must be indented with 4 spaces
[*.py]
indent_style = space
indent_size = 4

# popular php guidelines recommend 4 spaces
[*.php]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2

[{.prettierrc,.jshintrc,.babelrc}]
indent_style = space
indent_size = 2

